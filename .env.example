# Copy file này thành .env (KHÔNG commit .env) và điền giá trị thật.
# Repo này đã ignore .env trong .gitignore.

# Flask
# Tạo chuỗi ngẫu nhiên dài (>=32 ký tự) để ký session cookie.
SECRET_KEY=

# Admin (để đăng nhập /admin)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=

# Database
# Local:
MONGODB_URI=mongodb://localhost:27017
# MongoDB Atlas (KHÔNG commit user/pass):
# MONGODB_URI=mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/

# Gemini (chọn 1 trong 2 cách)
# Cách A: danh sách key, ngăn cách bằng dấu phẩy
# GEMINI_API_KEYS=key1,key2,key3
# Cách B: tách riêng
GEMINI_API_KEY_PRIMARY=
GEMINI_API_KEY_SECONDARY=

# Groq (optional fallback)
GROQ_API_KEY=

# Vintern (optional; chỉ cần nếu bạn chạy scanned PDFs qua Colab)
VINTERN_API_URL=

# Optional: fail-fast DB connect
DB_CONNECT_ON_START=false
