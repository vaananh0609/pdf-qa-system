# Flask
SECRET_KEY=change-me-to-a-long-random-string

# Admin (required to log into /admin)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me

# Database
# Local example:
MONGODB_URI=mongodb://localhost:27017
# Atlas example (DO NOT COMMIT credentials):
# MONGODB_URI=mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/

# Gemini (choose one style)
# Style A: comma-separated list
# GEMINI_API_KEYS=key1,key2,key3
# Style B: separate vars
GEMINI_API_KEY_PRIMARY=
GEMINI_API_KEY_SECONDARY=

# Groq (optional fallback)
GROQ_API_KEY=

# Vintern (optional; only needed for scanned PDFs)
VINTERN_API_URL=

# Optional: fail-fast DB connect
DB_CONNECT_ON_START=false
